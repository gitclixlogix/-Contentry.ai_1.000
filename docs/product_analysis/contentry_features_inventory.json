    "content_analysis": {
      "category_id": "CA",
      "description": "Content scoring, compliance checking, and risk detection",
      "features": [
        {
          "id": "CA-001",
          "name": "Content Analysis & Scoring",
          "description": "Comprehensive analysis with multi-dimensional scoring",
          "status": "IMPLEMENTED",
          "maturity": "Production-ready",
          "endpoints": ["/api/v1/content/analyze", "/api/v1/content/analyze-with-image"],
          "scoring_system": {
            "overall_score": {
              "description": "Weighted composite score (0-100)",
              "calculation": "Standard: (Compliance × 0.4) + (Cultural × 0.3) + (Accuracy × 0.3)",
              "risk_adjustments": [
                "High Risk (Compliance ≤ 60): Compliance weight increases to 0.5",
                "Reputation Risk (Cultural ≤ 50): Cultural weight increases to 0.4",
                "Critical (Compliance ≤ 40): Hard cap at 40"
              ]
            },
            "compliance_score": {
              "description": "Penalty-based score starting at 100",
              "violations": [
                {"severity": "Critical", "penalty": -60, "examples": ["NDA Breach", "Confidential Info"]},
                {"severity": "Severe", "penalty": -40, "examples": ["Harassment"]},
                {"severity": "High", "penalty": -25, "examples": ["Missing Advertising Disclosure"]},
                {"severity": "Moderate", "penalty": -10, "examples": ["Inappropriate Tone"]}
              ]
            },
            "cultural_sensitivity_score": {
              "description": "Based on Hofstede's 6 Cultural Dimensions",
              "dimensions": [
                "Power Distance",
                "Individualism vs Collectivism",
                "Masculinity vs Femininity",
                "Uncertainty Avoidance",
                "Long-Term Orientation",
                "Indulgence vs Restraint"
              ]
            },
            "accuracy_score": {
              "description": "Penalty-based score for factual accuracy",
              "issues": [
                {"type": "Major Inaccuracy/Misinformation", "penalty": -40},
                {"type": "Non-Credible Source", "penalty": -20},
                {"type": "Unverifiable Claim", "penalty": -10}
              ]
            }
          }
        },
        {
          "id": "CA-002",
          "name": "Compliance Checking",
          "description": "Check content against policy guidelines and regulations",
          "status": "IMPLEMENTED",
          "maturity": "Production-ready",
          "checks": [
            "Policy violation detection",
            "Harassment detection",
            "Confidential information detection",
            "Advertising disclosure requirements",
            "Brand guideline compliance"
          ]
        },
        {
